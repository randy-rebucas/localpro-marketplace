# ─── Database ─────────────────────────────────────────────────────────────────
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority

# ─── Auth ─────────────────────────────────────────────────────────────────────
# Use two DIFFERENT long random strings (e.g. openssl rand -hex 64)
JWT_SECRET=change-me-to-a-long-random-secret
JWT_REFRESH_SECRET=change-me-to-a-different-long-random-secret

# ─── App URL ──────────────────────────────────────────────────────────────────
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ─── Email (SMTP) ─────────────────────────────────────────────────────────────
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASS=your-smtp-password
SMTP_FROM=LocalPro <noreply@example.com>

# ─── PayMongo ─────────────────────────────────────────────────────────────────
PAYMONGO_SECRET_KEY=sk_test_xxxx
PAYMONGO_WEBHOOK_SECRET=whsec_xxxx

# ─── OpenAI ───────────────────────────────────────────────────────────────────
OPENAI_API_KEY=sk-proj-xxxx

# ─── Cloudinary ───────────────────────────────────────────────────────────────
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ─── Google Maps ──────────────────────────────────────────────────────────────
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=AIza...

# ─── Google Tag Manager ──────────────────────────────────────────────────────
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# ─── Cron ─────────────────────────────────────────────────────────────────────
# Random secret to authenticate cron job requests
CRON_SECRET=change-me-to-a-long-random-string

# ─── Sentry (optional but recommended in production) ──────────────────────────
# SENTRY_DSN=https://xxx@oyyy.ingest.sentry.io/zzz
# SENTRY_AUTH_TOKEN=sntryu_xxx

# ─── Facebook OAuth ───────────────────────────────────────────────────────────
# Create an app at https://developers.facebook.com/
# Add "Facebook Login" product; set Valid OAuth Redirect URI to:
#   https://yourdomain.com/api/auth/facebook/callback
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# ─── Twilio (SMS OTP) ─────────────────────────────────────────────────────────
# Sign up at https://www.twilio.com/ and get a phone number
TWILIO_ACCOUNT_SID=ACxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX
